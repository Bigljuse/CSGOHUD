<UserControl x:Class="CSGOHUD.Controls.PlayerStatisticsRight"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CSGOHUD.Controls"
             mc:Ignorable="d" 
             Name="Control_PlayerStatisticsRight"
             FontSize="15"
             FontFamily="Arial Black"
             Width="500"
             MinWidth="400"
             Height="60"
             MinHeight="60">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="100"/>
            <ColumnDefinition Width="2*" MinWidth="200"/>
            <ColumnDefinition Width="Auto" MinWidth="50"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="2"
              Height="{Binding ElementName=Control_PlayerStatisticsRight, Path=Height}"
              Width="{Binding ElementName=Control_PlayerStatisticsRight, Path=Height}">
            <Image Name="Image_PlayerImage"
                   Stretch="Fill"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch"
                   Source="{Binding ElementName=Control_PlayerStatisticsRight, Path=PlayerImageSource}">
            </Image>
            <TextBlock x:Name="TextBlock_PlayerNumber"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Top"
                       Foreground="White"
                       Text="{Binding ElementName=Control_PlayerStatisticsRight, Path=PlayerNumber}">
            </TextBlock>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="7.4*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Rectangle Grid.ColumnSpan="2">
                    <Rectangle.Fill>
                        <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                            <GradientStop Color="#FF60ABC9" Offset="0"/>
                            <GradientStop Color="#FF3D4F64" Offset="1"/>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>

                <TextBlock Grid.Column="1"
                            Name="TextBlock_Health"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Foreground="LightGray"
                           Text="{Binding ElementName=Control_PlayerStatisticsRight, Path=Health}">
                </TextBlock>
                <TextBlock Grid.Column="0"
                           Margin="2"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           Foreground="WhiteSmoke"
                           Text="{Binding ElementName=Control_PlayerStatisticsRight, Path=NickName}">
                </TextBlock>
            </Grid>

            <Grid Grid.Row="1"
                  Background="Black">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Image Grid.Column="7"
                       Name="Image_Helmet"
                       Source="{Binding ElementName=Control_PlayerStatisticsRight, Path=HelmetImageSource}">
                </Image>

                <Grid Grid.Column="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>


                    <TextBlock Name="TextBlock_Money"
                               Grid.Column="1"
                               Margin="2"
                               VerticalAlignment="Center"
                               Foreground="DarkRed"
                               Text="{Binding ElementName=Control_PlayerStatisticsRight, Path=Money, StringFormat='${0}'}">
                    </TextBlock>

                    <Image x:Name="Image_Defuzes"
                           Grid.Column="0"
                           HorizontalAlignment="Right"
                           Source="{Binding ElementName=Control_PlayerStatisticsRight, Path=DefuzesImageSource}">
                    </Image>
                </Grid>

                <Image x:Name="Image_Impact"
                       Grid.Column="0"
                       Source="{Binding ElementName=Control_PlayerStatisticsRight, Path=ImpactImageSource}"/>
                <Image x:Name="Image_Smoke"
                       Grid.Column="1"
                       Source="{Binding ElementName=Control_PlayerStatisticsRight, Path=SmokeImageSource}"/>
                <Image x:Name="Image_Flash"
                       Grid.Column="2"
                       Source="{Binding ElementName=Control_PlayerStatisticsRight, Path=FlashImageSource}"/>
                <Image x:Name="Image_Pistol"
                       Grid.Column="3"
                       Source="{Binding ElementName=Control_PlayerStatisticsRight, Path=PistolImageSource}"/>

            </Grid>
        </Grid>

        <Grid Height="{Binding ElementName=Control_PlayerStatisticsRight, Path=Height}"
              Grid.Column="0">
            <Image x:Name="Image_MainGun"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch"
                   Source="{Binding ElementName=Control_PlayerStatisticsRight, Path=MainGunImageSource}">
            </Image>
        </Grid>
    </Grid>
</UserControl>
